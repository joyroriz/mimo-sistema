{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "PYTHONPATH": ".",
    "DATABASE_URL": "sqlite:////tmp/mimo_completo.db"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  }
}
