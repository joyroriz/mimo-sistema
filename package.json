{
  "name": "mimo-sistema-tests",
  "version": "2.0.0-CACHE-BUSTER-FORCE-REBUILD",
  "description": "Automação de testes para o Sistema MIMO usando Playwright MCP",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "install-browsers": "playwright install",
    "install-deps": "playwright install-deps",
    "mcp-server": "npx @playwright/mcp@latest",
    "mcp-server-headed": "npx @playwright/mcp@latest --browser chrome",
    "mcp-server-config": "npx @playwright/mcp@latest --config playwright-mcp.config.json",
    "setup": "npm run install-browsers && npm run install-deps",
    "test:mimo": "playwright test tests/mimo-sistema.spec.js",
    "test:login": "playwright test tests/login.spec.js",
    "test:clientes": "playwright test tests/clientes.spec.js",
    "test:vendas": "playwright test tests/vendas.spec.js",
    "test:entregas": "playwright test tests/entregas.spec.js"
  },
  "keywords": [
    "playwright",
    "mcp",
    "automation",
    "testing",
    "mimo",
    "sistema"
  ],
  "author": "Sistema MIMO",
  "license": "MIT",
  "devDependencies": {
    "@playwright/mcp": "latest",
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joyroriz/mimo-sistema.git"
  },
  "bugs": {
    "url": "https://github.com/joyroriz/mimo-sistema/issues"
  },
  "homepage": "https://github.com/joyroriz/mimo-sistema#readme"
}
