# Configurações do Playwright MCP para Sistema MIMO

# URL base do sistema
BASE_URL=http://localhost:8080

# Configurações do navegador
BROWSER=chromium
HEADLESS=false

# Configurações de timeout (em milissegundos)
ACTION_TIMEOUT=10000
NAVIGATION_TIMEOUT=30000
TEST_TIMEOUT=30000

# Configurações de retry
RETRIES=2
WORKERS=1

# Configurações de captura
SCREENSHOT=only-on-failure
VIDEO=retain-on-failure
TRACE=on-first-retry

# Configurações do MCP
MCP_PORT=8931
MCP_HOST=localhost

# Configurações de rede
IGNORE_HTTPS_ERRORS=true

# Configurações de locale
LOCALE=pt-BR
TIMEZONE=America/Sao_Paulo

# Diretórios
OUTPUT_DIR=./playwright-data/output
USER_DATA_DIR=./playwright-data/user-data
VIDEOS_DIR=./playwright-data/videos

# Credenciais de teste (se necessário)
TEST_USERNAME=admin
TEST_PASSWORD=Mimo2025

# URLs de produção (para testes de integração)
PROD_URL=https://mimo-sistema.vercel.app
